.row.headline.admin
  .col-md-6.col-md-offset-3
    %h3 All Editors

.row
  .col-md-6.col-md-offset-3
    .search-buttons
      = form_tag admin_index_path, method: "get", class: "form-inline"
      .row.work-status-admin
        %h4 Work Status
        .checkbox
          = label_tag "Looking for work"
          %br
          = check_box_tag "looking_for_work[]", true, false
        .checkbox
          = label_tag "Not Looking for work"
          %br
          = check_box_tag "looking_for_work[]", false, false
      .row.classification-admin
        %h4 Editor Classification
        .checkbox
          = label_tag "A-List"
          %br
          = check_box_tag "classification[]", "a_list", false
        .checkbox
          = label_tag "B-List"
          %br
          = check_box_tag "classification[]", "b_list", false
        .checkbox
          = label_tag "First Assignment"
          %br
          = check_box_tag "classification[]", "first_assignment", false
        .checkbox
          = label_tag "Not Yet Assigned"
          %br
          = check_box_tag "classification[]", "not_yet_assigned", false
      .row.categories-admin
        %h4 Editor Interests
        - Category.all.each do |category|
          .checkbox
            = label_tag category.pretty_name
            %br
            = check_box_tag "category[]", category.id, false

      %span.help-block
        Or select nothing and get everything. The world is yours.
      = submit_tag "Search", class: "btn btn-default"


.row
  .col-md-12
    - if @editors.empty?
      .no-results
        %h5 No results found.
    - else
      %table.table
        %tr
          %th Name
          %th Email
          %th Looking for Work?
          %th Editor Classification
          %th Interests
          %th
          %th
        - @editors.each do |editor|
          %tr{ class: "#{ looking_for_work_class(editor) }"}
            %td
              = editor.full_name
            %td
              = editor.email
            %td
              - if editor.looking_for_work?
                YES, I WANT MORE WORK
              - else
                NO, LEAVE ME ALONE
            %td
              = editor.pretty_classification
            %td
              = editor.categories.pluck(:pretty_name).join(', ')
            %td
              = link_to "Edit", edit_user_path(editor), class: "btn btn-default"
            %td
              = link_to "Delete Editor", user_path(editor), method: :delete,  data: { confirm: 'Are you sure?' }, class: "btn btn-danger"
